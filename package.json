{
  "name": "resume",
  "version": "1.0.0",
  "private": true,
  "homepage": "/resume",
  "dependencies": {
    "halogen": "^0.2.0",
    "material-ui": "^0.19.2",
    "react": "^15.6.1",
    "react-anime": "^0.3.4",
    "react-dom": "^15.6.1",
    "react-material-ui-form-validator": "^1.0.0",
    "react-responsive": "^4.0.3",
    "react-scripts": "^3.0.0",
    "react-scroll": "^1.6.5",
    "react-tap-event": "^2.0.1",
    "react-tap-event-plugin": "^2.0.1",
    "react-toastify": "^4.5.2"
  },
  "scripts": {
    "build-css": "node-sass-chokidar src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar src/ -o src/ --watch --recursive",
    "start-js": "react-scripts start",
    "start": "npm-run-all -p watch-css start-js",
    "build": "npm run build-html && npm run build-pdf && npm run build-seo && npm run build-css && react-scripts build",
    "build-html": "cd src && resume export ../public/cv.html && cd ..",
    "build-pdf": "cd src && resume export ../public/cv.pdf && cd ..",
    "build-seo": "node buildSeo.js",
    "test": "CI=true react-scripts test env=jsdom",
    "eject": "react-scripts eject"
  },
  "hooks": {
    "pre-commit": "pretty-quick --staged"
  },
  "devDependencies": {
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.3.1",
    "node-sass-chokidar": "^1.3.4",
    "npm-run-all": "^4.1.1",
    "prettier": "^1.16.4",
    "pretty-quick": "^1.10.0",
    "pug": "^3.0.1",
    "puppeteer": "^2.0.0",
    "resume-cli": "^1.2.7"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
